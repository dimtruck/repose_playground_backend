# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Repose versions page
GET        /versions                                    controllers.Application.versions()
POST       /versions/:id                                controllers.Application.build(id)


# Components
GET        /versions/:id/components                     controllers.Application.componentsByVersion(id)
GET        /versions/:id/components/:componentId        controllers.Application.component(id, componentId)

# Account
POST       /app/auth                                    controllers.Login.create()
GET        /app/auth                                    controllers.Login.index()

# Reposes
GET        /app/repose/list                             controllers.Repose.list()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
